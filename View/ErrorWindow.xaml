<Window x:Class="WPF.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="150" Width="400">
    <Grid>
        <TextBox x:Name="TB_Error" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="305" Height="70" FontSize="24" Text="Error" TextAlignment="Center"/>
    </Grid>
</Window>
