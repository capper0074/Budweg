<Window x:Class="Budweg2._1.View.CreateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budweg2._1.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CreateOrder" Height="270" Width="300">
    <Grid  Margin="10,10,10,10">
        <TextBox x:Name="TB_EmpID" HorizontalAlignment="Left" Margin="0,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_CaTy" HorizontalAlignment="Left" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBox x:Name="TB_NumCal" HorizontalAlignment="Left" Margin="0,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_Comm" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,174,0,0"/>
        <Label x:Name="LA_EmpID" Content="Emplyoee ID" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="33"/>
        <Label x:Name="LA_CalTyp" Content="Caliber Type" HorizontalAlignment="Left" Margin="0,51,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
        <Label x:Name="LA_NumCali" Content="Number of Calibers" HorizontalAlignment="Left" Margin="0,98,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
        <Label x:Name="LA_Comm" Content="Comment" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="29" Margin="0,145,0,0"/>
        <Button x:Name="BT_Create" Content="Create Order" HorizontalAlignment="Left" Margin="155,103,0,0" VerticalAlignment="Top" Height="24" Width="103" Click="BT_Create_Click"/>
        <Button x:Name="Close_Window" Content="Close window" HorizontalAlignment="Left" Margin="180,193,0,0" VerticalAlignment="Top" Height="20" Width="78" Click="Close_Window_Click"/>
    </Grid>
</Window>
