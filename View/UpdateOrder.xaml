<Window x:Class="Budweg2._1.View.UpdateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budweg2._1.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="UpdateOrder" Height="300" Width="500">
    <Grid Margin="10">
        <ListBox x:Name="LB_ShowList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="164,10,0,0"/>
        <Button x:Name="BT_Update" Content="Update Order" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Height="34" Width="110" Click="BT_Update_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="10,26,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,108,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,148,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,186,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LA_OrderId" Content="Order Id" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LA_OrderId_Copy" Content="Order Id" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LA_OrderId_Copy1" Content="Order Id" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LA_OrderId_Copy2" Content="Order Id" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LA_OrderId_Copy3" Content="Order Id" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
