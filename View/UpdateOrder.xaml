<Window x:Class="Budweg2._1.View.UpdateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budweg2._1.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="UpdateOrder" Height="350" Width="555">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ListBox Grid.Row="1" Grid.Column="1" x:Name="LB_ShowList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="222,10,0,0"/>

            <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboBox1" Margin="5" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            
            <Label x:Name="Label_Id" Content="OrdreId" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBox x:Name="TextBox_Id" TextWrapping="Wrap" Text="" Margin="0,5,0,0"/>

            <Label x:Name="Label_newData" Content="Ændring" Margin="0,5,0,0" />
            <TextBox x:Name="TextBox_newData" TextWrapping="Wrap" Text="" Margin="0,5,0,0"/>
        
            <Button x:Name="BT_Update" Content="Opdater" Margin="5,20,5,0" Click="BT_Update_Click"/>
            <Button x:Name="Close_Window" Content="Luk" Margin="5,10,5,5" Click="Close_Window_Click"/>
        </StackPanel>
        


    </Grid>
</Window>
