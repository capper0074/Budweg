<Window x:Class="Budweg2._1.View.DeleteOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budweg2._1.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="DeleteOrder" Height="300" Width="500">
    <Grid Margin="10">
        <ListBox x:Name="LB_ShowOrders" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="176,10,10,10"/>
        <Button x:Name="BT_DeleteOrder" Content="Delete Order" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Height="26" Width="103" Click="BT_DeleteOrder_Click"/>
        <TextBox x:Name="TB_OrderID" HorizontalAlignment="Left" Margin="10,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
